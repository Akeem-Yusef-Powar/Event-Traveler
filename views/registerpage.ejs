<h2 id="topTitle">Event Traveler</h2>

<body>



    <main id="main-holder">
        <form id="registration-form" action="/register" method="post">
            <h1 id="registration-header">Sign up!</h1>
            <input type="text" name="firstname" id="first-name-field" class="registration-form-field" placeholder="First Name">
            <input type="text" name="lastname" id="last-name-field" class="registration-form-field" placeholder="Last Name">
            <input type="text" name="email" id="email-field" class="registration-form-field" placeholder="Email">
            <input type="text" name="username" id="username-field" class="registration-form-field" placeholder="Username">
            <input type="password" name="password" id="password-field" class="registration-form-field" placeholder="Password">
            <input type="password" name="conpassword" id="conpassword-field" class="registration-form-field" placeholder="Confirm Password">
            <input type="submit" value="Register!" id="registration-form-submit">
            <div id="registration-error-msg-holder">
                <p>
                    <%=error%>
                </p>
            </div>
        </form>

    </main>

</body>

</html>