<body>

    <% if (tripData.length == 0 ){ %>
      <div class="sidebar-nav" style="width:100%;right:0">
        <h3>Nothing to Display</h3>
        <a href="default">No trip data </a>

    </div>

      <% }else{ %>

    <table style="width:60%">
      <tr>
        <th>Picture</th>
        <th>Location</th>
        <th>From</th>
        <th>To</th>
        <th>Score</th>
        <th>Price</th>
        <th>journal Entry</th>

      </tr>

      <% for (i=0; i<tripData.length;i++){ %>
      <tr>
          <tr>
       <td><img id = 'image' src= "/uploads/trips/<%=tripData[i].trip_pic%>" alt= "image should be here" width="150"></td>

        <td><%=tripData[i].trip_title%></td>

        <td><%=tripData[i].trip_start%></td>

        <td><%=tripData[i].trip_end%></td>

        <td><%=tripData[i].trip_score%></td>

        <td>$<%=tripData[i].trip_price%></td>

        <td><%=tripData[i].trip_journals%></td>

        <form action ="/editSelectedTrip" method="post">
            <td><button type = "submit" name = "click"  value = "<%=tripData[i].tripID%>" >Edit</button></td>
            </form>

            <form action ="/deleteSelectedTrip" method="post">
              <td><button type = "submit" name = "click"  value = "<%=tripData[i].tripID%>" >Delete</button></td>
              </form>

        <% } %>
  <% } %>

    </table>

<script src="/js/MakeClickSortTable.js"></script>
<script src="/js/SortableTableUtils.js"></script>
<script src="/js/savedTrips.js"></script>
<script>

    document.getElementById("content").innerHTML = "";
    var ele = savedTrips(tripData);
    document.getElementById("content").appendChild(ele);

</script>


<!-- delete confirmation -->

</body>

</html>
